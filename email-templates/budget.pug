doctype html
html
    body
        h1.title Presupuesto para #{user.name}

        h3.tile-userinfo Datos de la persona solicitante del presupuesto
        table
            tbody
                tr
                    td Nombre
                    td #{user.name}
                tr
                    td Cedula
                    td #{user.identification}
                tr
                    td Correo
                    td #{user.email}

        br

        h3 Lista de compra

        table
            tbody
                each product in products
                    tr
                        td Producto
                        td= product.productName
